{
  "name": "fabric-shim",
  "version": "1.4.7",
  "tag": "latest-1.4",
  "description": "A node.js implementation of Hyperledger Fabric chaincode shim, to allow endorsing peers and user-provided chaincodes to communicate with each other",
  "main": "index.js",
  "bin": {
    "fabric-chaincode-node": "cli.js"
  },
  "scripts": {
    "start": "node index.js",
    "compile": "tsc --project test/typescript",
    "test": "nyc mocha --recursive 'test/unit/**/*.js' ",
    "tgzpack": "../ci/tgzpack.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperledger/fabric-chaincode-node"
  },
  "keywords": [
    "fabric-shim",
    "Hyperledger Fabric",
    "Fabric Shim"
  ],
  "engines": {
    "node": "^8.17.0",
    "npm": "^6.13.4"
  },
  "yargs": {
    "dot-notation": false
  },
  "types": "./types/index.d.ts",
  "license": "Apache-2.0",
  "dependencies": {
    "@ampretia/x509": "^0.4.8",
    "@types/google-protobuf": "^3.2.7",
    "@types/node": "^8.9.4",
    "ajv": "^6.5.5",
    "fs-extra": "^7.0.1",
    "grpc": "1.24.4",
    "jsrsasign": "^10.5.7",
    "reflect-metadata": "^0.1.12",
    "winston": "^3.2.1",
    "yargs": "^15.0.0",
    "yargs-parser": "^13.1.1",
    "protobufjs": "5.0.3"
  },
  "devDependencies": {
    "mocha": "^9.2.1",
    "mocha-junit-reporter": "^2.0.2",
    "nyc": "^15.1.0",
    "typescript": "3.0.1"
  },
  "nyc": {
    "include": [
      "lib/**/*.js"
    ],
    "exclude": [
      "coverage/**",
      "test/**"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true,
    "check-coverage": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100
  }
}
