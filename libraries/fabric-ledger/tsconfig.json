{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "erasableSyntaxOnly": true,
        "isolatedModules": true,
        "sourceMap": true,
        "strict": true,
        "outDir": "lib",
        "rootDir": "src"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/**/*"]
}
