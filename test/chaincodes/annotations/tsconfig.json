{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "declarationMap": true,
        "erasableSyntaxOnly": true,
        "isolatedModules": true,
        "sourceMap": true,
        "strict": true,
        "outDir": "dist",
        "rootDir": "src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    }
}
