{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
	"extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", "tab"],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-unused-vars":["error"],
        "no-trailing-spaces": ["error"],
        "max-len": [
            "error",
            {
                "code": 150,
                "ignoreTrailingComments": true,
                "ignoreUrls": true,
                "ignoreStrings": true,
                "ignoreTemplateLiterals": true,
                "ignoreRegExpLiterals": true
            }
        ]
    }
}
