# SPDX-License-Identifier: Apache-2.0

set -ex
exec 1>&2
BUILD="$1"
RELEASE="$2"

if [ -d "${BUILD}/metadata" ]; then
    cp -a "${BUILD}/metadata/*" "${RELEASE}/"
fi

if [ -f "${BUILD}/connection.json" ]; then
    mkdir -p "${RELEASE}/chaincode/server"
    cp "${BUILD}/connection.json" "${RELEASE}/chaincode/server"
    ls -l "${RELEASE}/chaincode/server/connection.json"
    cat "${RELEASE}/chaincode/server/connection.json"
fi

ls -lartR "${RELEASE}"